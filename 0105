âœ… å®Œæ•´ç¬¦åˆä½ ç°æœ‰ä¸Šä¸‹æ–‡é€»è¾‘

å¦‚æœä½ ç¡®è®¤ï¼Œæˆ‘å¯ä»¥å¸®ä½ ç”Ÿæˆæ•´åˆ WSLã€SelectedConnectionã€LastSelectedConnectionIdã€Saveã€Testã€Addã€Remove çš„ DbConfigViewModel å®Œæ•´ä»£ç ï¼Œç›´æ¥å¯ç”¨ã€‚

ä½ å¸Œæœ›æˆ‘ç›´æ¥ç”Ÿæˆå—ï¼Ÿ





æ˜ç™½ï¼Œæˆ‘å¸®ä½ æ•´ç†ä¸€ç‰ˆ å®Œæ•´ä¸”å’Œä½ ç°æœ‰å·¥ç¨‹å…¼å®¹çš„ DbConfigViewModelï¼Œé‡ç‚¹åœ¨äºï¼š
	â€¢	SelectedConnection ä¸ LastSelectedConnectionId å®Œå…¨åŒæ­¥
	â€¢	JSON Load / Save æ­£ç¡®å¤„ç†
	â€¢	Add / Remove / Test / Save çŠ¶æ€é—­ç¯
	â€¢	ä¿ç•™åŸæœ‰é€»è¾‘ï¼Œä¸ç ´åä½ ä¹‹å‰å®ç°çš„åŠŸèƒ½

â¸»

å®Œæ•´ DbConfigViewModel ç¤ºä¾‹

using System.Collections.ObjectModel;
using System.IO;
using System.Linq;
using System.Text.Json;
using System.Threading.Tasks;
using CommunityToolkit.Mvvm.ComponentModel;
using CommunityToolkit.Mvvm.Input;

namespace PostgreToolNew.ViewModels
{
    public partial class DbConfigViewModel : ObservableObject
    {
        private const string JsonFilePath = "dbconnections.json";

        // Connections åˆ—è¡¨
        [ObservableProperty]
        private ObservableCollection<DbConnectionConfig> connections = new ObservableCollection<DbConnectionConfig>();

        // å½“å‰é€‰ä¸­è¿æ¥
        [ObservableProperty]
        private DbConnectionConfig? selectedConnection;

        // ä¿å­˜ä¸Šæ¬¡é€‰ä¸­è¿æ¥ ID
        [ObservableProperty]
        private string? lastSelectedConnectionId;

        // æµ‹è¯•è¿æ¥çŠ¶æ€ä¿¡æ¯
        [ObservableProperty]
        private string testResultMessage = "";

        // Save æŒ‰é’®çŠ¶æ€
        [ObservableProperty]
        private bool canSave;

        public DbConfigViewModel()
        {
            LoadFromJson();
        }

        // å½“é€‰ä¸­è¿æ¥æ”¹å˜æ—¶åŒæ­¥ LastSelectedConnectionId
        partial void OnSelectedConnectionChanged(DbConnectionConfig? value)
        {
            LastSelectedConnectionId = value?.ConnectionId;
            SaveCommand.NotifyCanExecuteChanged();
        }

        [RelayCommand(CanExecute = nameof(CanExecuteSave))]
        private void OnSave()
        {
            if (SelectedConnection == null)
                return;

            SaveToJson();
            TestResultMessage = "Connections saved";
        }

        private bool CanExecuteSave()
        {
            return SelectedConnection != null && CanSave;
        }

        [RelayCommand]
        private void OnAdd()
        {
            var newConn = new DbConnectionConfig
            {
                ConnectionId = System.Guid.NewGuid().ToString(),
                ConnectionName = "New Connection"
            };

            Connections.Add(newConn);
            SelectedConnection = newConn;
        }

        [RelayCommand]
        private void OnRemove()
        {
            if (SelectedConnection == null)
                return;

            var toRemove = SelectedConnection;
            Connections.Remove(toRemove);

            // æ›´æ–°é€‰ä¸­è¿æ¥
            if (Connections.Count > 0)
                SelectedConnection = Connections.First();
            else
                SelectedConnection = null;
        }

        [RelayCommand]
        private async Task OnTestAsync()
        {
            if (SelectedConnection == null)
                return;

            TestResultMessage = "Testing...";
            CanSave = false;

            try
            {
                // TODO: æ›¿æ¢ä¸ºçœŸå® Npgsql / WSL æµ‹è¯•é€»è¾‘
                await Task.Delay(500);
                bool testSuccess = true;

                SelectedConnection.IsTested = testSuccess;
                TestResultMessage = testSuccess ? "Test succeeded" : "Test failed";
                CanSave = testSuccess;

                SaveCommand.NotifyCanExecuteChanged();
            }
            catch (System.Exception ex)
            {
                SelectedConnection.IsTested = false;
                TestResultMessage = $"Test error: {ex.Message}";
                CanSave = false;

                SaveCommand.NotifyCanExecuteChanged();
            }
        }

        private void SaveToJson()
        {
            var dto = new
            {
                LastSelectedConnectionId = this.LastSelectedConnectionId,
                Connections = this.Connections
            };

            File.WriteAllText(JsonFilePath, JsonSerializer.Serialize(dto, new JsonSerializerOptions { WriteIndented = true }));
        }

        private void LoadFromJson()
        {
            if (!File.Exists(JsonFilePath))
                return;

            var json = File.ReadAllText(JsonFilePath);
            var dto = JsonSerializer.Deserialize<JsonDbConfigDto>(json);
            if (dto == null) return;

            Connections.Clear();
            foreach (var c in dto.Connections)
                Connections.Add(c);

            // æ ¹æ® LastSelectedConnectionId è®¾ç½® SelectedConnection
            SelectedConnection = Connections.FirstOrDefault(c => c.ConnectionId == dto.LastSelectedConnectionId);
        }

        // DTO ç”¨äº JSON åºåˆ—åŒ–
        private class JsonDbConfigDto
        {
            public string? LastSelectedConnectionId { get; set; }
            public ObservableCollection<DbConnectionConfig> Connections { get; set; } = new ObservableCollection<DbConnectionConfig>();
        }
    }

    // æ¨¡å‹
    public class DbConnectionConfig : ObservableObject
    {
        public string ConnectionId { get; set; } = System.Guid.NewGuid().ToString();
        public string ConnectionName { get; set; } = "New Connection";
        public string Host { get; set; } = "";
        public string Database { get; set; } = "";
        public string UserId { get; set; } = "";
        public string Password { get; set; } = "";
        public string WslName { get; set; } = "";
        public bool IsTested { get; set; } = false;
    }
}


â¸»

