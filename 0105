public class DbConnectionConfig
{
    public Guid ConnectionId { get; set; }
    public string ConnectionName { get; set; } = "";
    public string Host { get; set; } = "";
    public int Port { get; set; } = 5432;
    public string Database { get; set; } = "";
    public string UserId { get; set; } = "";
    public string Password { get; set; } = "";
}

ğŸ‘‰ Page2 ä¸ä¼šä¿®æ”¹å®ƒ

â¸»

ä¸‰ã€Servicesï¼šPostgreCsvServiceï¼ˆæ ¸å¿ƒé€»è¾‘ï¼‰

ğŸ“ Services/PostgreCsvService.cs

using Npgsql;
using System.Text;

namespace PostgreToolNew.Services
{
    public class PostgreCsvService
    {
        private readonly string _connectionString;

        public PostgreCsvService(DbConnectionConfig config)
        {
            _connectionString =
                $"Host={config.Host};Port={config.Port};Database={config.Database};Username={config.UserId};Password={config.Password}";
        }

        public async Task<List<string>> GetTableNamesAsync()
        {
            var result = new List<string>();

            using var conn = new NpgsqlConnection(_connectionString);
            await conn.OpenAsync();

            var cmd = new NpgsqlCommand(
                "SELECT tablename FROM pg_tables WHERE schemaname = 'public'",
                conn);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                result.Add(reader.GetString(0));
            }

            return result;
        }

        public async Task ExportTableAsync(string tableName, string folder)
        {
            var filePath = Path.Combine(folder, $"{tableName}.csv");

            using var conn = new NpgsqlConnection(_connectionString);
            await conn.OpenAsync();

            var sql = $"COPY {tableName} TO STDOUT WITH CSV HEADER";

            using var reader = conn.BeginTextExport(sql);
            var content = reader.ReadToEnd();

            await File.WriteAllTextAsync(filePath, content, Encoding.UTF8);
        }

        public async Task ImportCsvAsync(string tableName, string csvPath)
        {
            using var conn = new NpgsqlConnection(_connectionString);
            await conn.OpenAsync();

            using var tran = await conn.BeginTransactionAsync();

            var truncateCmd =
                new NpgsqlCommand($"TRUNCATE TABLE {tableName}", conn, tran);
            await truncateCmd.ExecuteNonQueryAsync();

            var copyCmd = $"COPY {tableName} FROM STDIN WITH CSV HEADER";
            using var writer = conn.BeginTextImport(copyCmd);

            var content = await File.ReadAllTextAsync(csvPath, Encoding.UTF8);
            await writer.WriteAsync(content);

            await tran.CommitAsync();
        }
    }
}


â¸»

å››ã€ViewModelï¼šCsvTransferViewModel

ğŸ“ ViewModels/CsvTransferViewModel.cs

using CommunityToolkit.Mvvm.ComponentModel;
using CommunityToolkit.Mvvm.Input;
using PostgreToolNew.Models;
using PostgreToolNew.Services;
using System.Collections.ObjectModel;

namespace PostgreToolNew.ViewModels
{
    public partial class CsvTransferViewModel : ObservableObject
    {
        private readonly PostgreCsvService _csvService;

        public CsvTransferViewModel(DbConnectionConfig connection)
        {
            CurrentConnection = connection;
            _csvService = new PostgreCsvService(connection);
        }

        [ObservableProperty]
        private DbConnectionConfig currentConnection;

        [ObservableProperty]
        private ObservableCollection<string> tables = new();

        [ObservableProperty]
        private ObservableCollection<string> selectedTables = new();

        [ObservableProperty]
        private ObservableCollection<string> logs = new();

        [ObservableProperty]
        private string? selectedFolder;

        /* ---------------- Tables ---------------- */

        [RelayCommand]
        private async Task LoadTablesAsync()
        {
            Tables.Clear();
            Logs.Add("Loading tables...");

            var list = await _csvService.GetTableNamesAsync();
            foreach (var table in list)
                Tables.Add(table);

            Logs.Add($"Loaded {Tables.Count} tables.");
        }

        /* ---------------- Export ---------------- */

        [RelayCommand(CanExecute = nameof(CanExport))]
        private async Task ExportAsync()
        {
            Logs.Add("Export started...");

            foreach (var table in SelectedTables)
            {
                Logs.Add($"Exporting {table}...");
                await _csvService.ExportTableAsync(table, SelectedFolder!);
            }

            Logs.Add("Export finished.");
        }

        private bool CanExport()
            => SelectedTables.Any() && !string.IsNullOrEmpty(SelectedFolder);

        /* ---------------- Import ---------------- */

        [RelayCommand]
        private async Task ImportAsync()
        {
            if (string.IsNullOrEmpty(SelectedFolder))
                return;

            Logs.Add("Import started...");

            var files = Directory.GetFiles(SelectedFolder, "*.csv");
            foreach (var file in files)
            {
                var table = Path.GetFileNameWithoutExtension(file);
                Logs.Add($"Importing {table}...");
                await _csvService.ImportCsvAsync(table, file);
            }

            Logs.Add("Import finished.");
        }
    }
}


