CsvTransferViewModel.cs

using System.Collections.ObjectModel;
using System.ComponentModel;
using CommunityToolkit.Mvvm.ComponentModel;
using CommunityToolkit.Mvvm.Input;
using Npgsql;
using System.IO;

namespace PostgreToolNew.ViewModels;

public partial class CsvTransferViewModel : ObservableObject
{
    private readonly DbConfigViewModel _dbConfigVM;

    public CsvTransferViewModel(DbConfigViewModel dbConfigVM)
    {
        _dbConfigVM = dbConfigVM;
        _dbConfigVM.PropertyChanged += DbConfigVM_PropertyChanged;

        Tables = new ObservableCollection<TableItem>();
        LogMessages = new ObservableCollection<string>();
    }

    [ObservableProperty]
    private ObservableCollection<TableItem> tables;

    [ObservableProperty]
    private ObservableCollection<string> logMessages;

    [ObservableProperty]
    private bool isBusy;

    private NpgsqlConnection? _connection;

    private void DbConfigVM_PropertyChanged(object? sender, PropertyChangedEventArgs e)
    {
        if (e.PropertyName == nameof(DbConfigViewModel.SelectedConnection))
        {
            OnConnectionChanged(_dbConfigVM.SelectedConnection);
        }
    }

    private void OnConnectionChanged(DbConnectionConfig? conn)
    {
        LogMessages.Add($"Connection changed: {conn?.ConnectionName}");

        if (conn == null)
        {
            _connection?.Close();
            Tables.Clear();
            return;
        }

        try
        {
            var cs = $"Host={conn.Host};Port={conn.Port};Username={conn.UserId};Password={conn.Password};Database={conn.Database}";
            _connection = new NpgsqlConnection(cs);
            _connection.Open();

            LoadTableList();
        }
        catch (Exception ex)
        {
            LogMessages.Add($"Error connecting DB: {ex.Message}");
        }
    }

    private void LoadTableList()
    {
        Tables.Clear();

        if (_connection == null) return;

        using var cmd = new NpgsqlCommand(
            "SELECT table_name FROM information_schema.tables WHERE table_schema='public'", _connection);

        using var reader = cmd.ExecuteReader();
        while (reader.Read())
        {
            var tableName = reader.GetString(0);
            Tables.Add(new TableItem { TableName = tableName, IsSelected = false });
        }

        LogMessages.Add($"Loaded {Tables.Count} tables");
    }

    [RelayCommand]
    private async Task ExportSelectedTablesAsync()
    {
        if (_connection == null) return;

        var folder = await SelectFolderAsync();
        if (folder == null) return;

        IsBusy = true;

        try
        {
            foreach (var table in Tables.Where(t => t.IsSelected))
            {
                var file = Path.Combine(folder, table.TableName + ".csv");
                using var writer = new StreamWriter(file);
                using var cmd = new NpgsqlCommand($"SELECT * FROM {table.TableName}", _connection);
                using var reader = await cmd.ExecuteReaderAsync();

                // å†™ header
                var columns = Enumerable.Range(0, reader.FieldCount)
                    .Select(i => reader.GetName(i));
                await writer.WriteLineAsync(string.Join(",", columns));

                while (await reader.ReadAsync())
                {
                    var values = Enumerable.Range(0, reader.FieldCount)
                        .Select(i => reader[i]?.ToString()?.Replace(",", "ï¼Œ"));
                    await writer.WriteLineAsync(string.Join(",", values));
                }

                LogMessages.Add($"Exported table {table.TableName} to {file}");
            }
        }
        catch (Exception ex)
        {
            LogMessages.Add($"Export error: {ex.Message}");
        }

        IsBusy = false;
    }

    [RelayCommand]
    private async Task ImportCsvFolderAsync()
    {
        if (_connection == null) return;

        var folder = await SelectFolderAsync();
        if (folder == null) return;

        IsBusy = true;

        try
        {
            var files = Directory.GetFiles(folder, "*.csv");
            foreach (var file in files)
            {
                var tableName = Path.GetFileNameWithoutExtension(file);

                using var reader = new StreamReader(file);
                var header = (await reader.ReadLineAsync())?.Split(',');

                if (header == null) continue;

                using var cmd = new NpgsqlCommand("", _connection);
                cmd.CommandText = $"TRUNCATE TABLE {tableName} RESTART IDENTITY";
                await cmd.ExecuteNonQueryAsync();

                string? line;
                while ((line = await reader.ReadLineAsync()) != null)
                {
                    var values = line.Split(',');
                    var columns = string.Join(",", header);
                    var parameters = string.Join(",", header.Select((h, i) => $"@p{i}"));

                    cmd.CommandText = $"INSERT INTO {tableName} ({columns}) VALUES ({parameters})";
                    cmd.Parameters.Clear();
                    for (int i = 0; i < values.Length; i++)
                        cmd.Parameters.AddWithValue($"@p{i}", values[i]);

                    await cmd.ExecuteNonQueryAsync();
                }

                LogMessages.Add($"Imported CSV {file} into {tableName}");
            }
        }
        catch (Exception ex)
        {
            LogMessages.Add($"Import error: {ex.Message}");
        }

        IsBusy = false;
    }

    // ç®€å•å°è£… Avalonia FolderPicker
    private async Task<string?> SelectFolderAsync()
    {
        var dlg = new Avalonia.Controls.OpenFolderDialog();
        return await dlg.ShowAsync(App.Current.ApplicationLifetime is Avalonia.Controls.ApplicationLifetimes.IClassicDesktopStyleApplicationLifetime desktop
            ? desktop.MainWindow
            : null);
    }

    public class TableItem : ObservableObject
    {
        [ObservableProperty]
        private string tableName = "";

        [ObservableProperty]
        private bool isSelected;
    }
}


