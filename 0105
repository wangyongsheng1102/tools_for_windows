åã€CsvTransferView.axaml

<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:PostgreToolNew.ViewModels"
    x:Class="PostgreToolNew.Controls.CsvTransferView">

    <StackPanel Margin="10">
        <TextBlock Text="CSV Import / Export" FontWeight="Bold" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Spacing="10">
            <Button Content="Export Selected Tables" Command="{Binding ExportSelectedTablesCommand}" />
            <Button Content="Import CSV Folder" Command="{Binding ImportCsvFolderCommand}" />
        </StackPanel>

        <TextBlock Text="Tables:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListBox Items="{Binding Tables}" Height="200">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vm:CsvTransferViewModel+TableItem">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected}"/>
                        <TextBlock Text="{Binding TableName}" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="Log:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListBox Items="{Binding LogMessages}" Height="150"/>
    </StackPanel>
</UserControl>


