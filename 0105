public partial class CsvTransferViewModel : ObservableObject
{
    private readonly DbConfigViewModel _dbConfigVM;

    public CsvTransferViewModel(DbConfigViewModel dbConfigVM)
    {
        _dbConfigVM = dbConfigVM;

        // å…³é”®ï¼šç›‘å¬çš„æ˜¯ DbConfigVM.SelectedConnection
        _dbConfigVM.PropertyChanged += DbConfigVM_PropertyChanged;
    }

    private void DbConfigVM_PropertyChanged(object? sender, PropertyChangedEventArgs e)
    {
        if (e.PropertyName == nameof(DbConfigViewModel.SelectedConnection))
        {
            Debug.WriteLine("CsvTransferVM detected SelectedConnection change");

            OnConnectionChanged(_dbConfigVM.SelectedConnection);
        }
    }

    private void OnConnectionChanged(DbConnectionConfig? conn)
    {
        // è¿™é‡Œä»¥ååšï¼šåŠ è½½è¡¨åˆ—è¡¨ã€åˆå§‹åŒ–çŠ¶æ€
    }
}

