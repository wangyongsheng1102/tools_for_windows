using Avalonia.Controls;

namespace PostgreToolNew.Controls;

public partial class ConfirmDialog : Window
{
    public ConfirmDialog(string message)
    {
        InitializeComponent();
        MessageText.Text = message;

        OkButton.Click += (_, _) => Close(true);
        this.Closing += (_, _) => Close(false);
    }
}


â¸»

3ï¸âƒ£ DbConfigViewModel ä¸­ä½¿ç”¨ï¼ˆå®‰å…¨è°ƒç”¨ï¼‰

private async void OnRemove()
{
    if (SelectedConnection == null)
        return;

    var dialog = new ConfirmDialog(
        $"Remove connection \"{SelectedConnection.ConnectionName}\"?\n" +
        "This change will take effect only after Save.");

    var result = await dialog.ShowDialog<bool>(
        App.Current!.ApplicationLifetime is IClassicDesktopStyleApplicationLifetime desktop
            ? desktop.MainWindow
            : null);

    if (result != true)
        return;

    RemoveSelectedConnection();
}

ğŸ‘‰ å®é™…åˆ é™¤é€»è¾‘å•ç‹¬å°è£…ï¼š

private void RemoveSelectedConnection()
{
    var toRemove = SelectedConnection!;
    var index = Connections.IndexOf(toRemove);

    Connections.Remove(toRemove);

    if (Connections.Count == 0)
    {
        SelectedConnection = null;
        InitializeState();
        return;
    }

    if (index >= Connections.Count)
        index = Connections.Count - 1;

    SelectedConnection = Connections[index];
}


