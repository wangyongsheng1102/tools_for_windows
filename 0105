[RelayCommand]
private async Task OnTestAsync()
{
    if (SelectedConnection == null)
        return;

    TestResultMessage = "Testing...";
    CanSave = false;

    try
    {
        // æ¨¡æ‹Ÿæµ‹è¯•ï¼šçœŸå®é€»è¾‘å¯ä»¥æ›¿æ¢ Npgsql / WSL è°ƒç”¨
        await Task.Delay(500); // æ¨¡æ‹Ÿå¼‚æ­¥æµ‹è¯•

        // TODO: å®é™…è°ƒç”¨ Npgsql / WSL æ£€æŸ¥è¿æ¥æ˜¯å¦æˆåŠŸ
        bool testSuccess = true;

        if (testSuccess)
        {
            SelectedConnection.IsTested = true;
            TestResultMessage = "Test succeeded";
            CanSave = true;  // Save æŒ‰é’®ç°åœ¨å¯ç”¨
        }
        else
        {
            SelectedConnection.IsTested = false;
            TestResultMessage = "Test failed";
            CanSave = false;
        }
    }
    catch (Exception ex)
    {
        SelectedConnection.IsTested = false;
        TestResultMessage = $"Test error: {ex.Message}";
        CanSave = false;
    }
}


