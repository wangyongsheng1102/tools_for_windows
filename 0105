ä¸€ã€WSL æœåŠ¡ç±»

using System.Collections.Generic;
using System.Diagnostics;
using System.Text.RegularExpressions;
using System.Threading.Tasks;

namespace PostgreToolNew.Services
{
    public class WslService
    {
        public async Task<List<string>> GetDistributionsAsync()
        {
            var distributions = new List<string>();

            var psi = new ProcessStartInfo
            {
                FileName = "wsl.exe",
                Arguments = "--list --quiet",
                RedirectStandardOutput = true,
                UseShellExecute = false,
                CreateNoWindow = true
            };

            using var process = Process.Start(psi);
            if (process != null)
            {
                string output = await process.StandardOutput.ReadToEndAsync();
                process.WaitForExit();

                // å¤„ç†æ¯è¡Œï¼šå»æ‰ç©ºæ ¼ã€\0
                var lines = output.Split('\n');
                foreach (var line in lines)
                {
                    var cleaned = Regex.Replace(line, @"[\0\s]", "");
                    if (!string.IsNullOrWhiteSpace(cleaned))
                        distributions.Add(cleaned);
                }
            }

            return distributions;
        }
    }
}

âœ… å¤„ç†äº†ä½ ä¹‹å‰æåˆ°çš„ç©ºæ ¼å’Œæ§åˆ¶å­—ç¬¦é—®é¢˜

â¸»

äºŒã€DbConfigViewModel å¢åŠ  WSL å±æ€§

[ObservableProperty]
private List<string> wslDistributions = new List<string>();

private readonly WslService _wslService = new WslService();

1ï¸âƒ£ å¼‚æ­¥åŠ è½½ WSL åˆ—è¡¨

public async Task LoadWslAsync()
{
    var list = await _wslService.GetDistributionsAsync();
    WslDistributions = list;

    // å¦‚æœå½“å‰ SelectedConnection æœ‰ WslNameï¼Œç¡®ä¿ä¸‹æ‹‰æ¡†æ˜¾ç¤ºæ­£ç¡®
    if (SelectedConnection != null && !string.IsNullOrEmpty(SelectedConnection.WslName))
    {
        if (WslDistributions.Contains(SelectedConnection.WslName))
        {
            SelectedConnection.WslName = SelectedConnection.WslName;
        }
    }
}

2ï¸âƒ£ SelectedConnection æ”¹å˜æ—¶åŒæ­¥ WslName

partial void OnSelectedConnectionChanged(DbConnectionConfig? value)
{
    if (value != null)
    {
        LastSelectedConnectionId = value.ConnectionId;

        // å¦‚æœ WSL åˆ—è¡¨å·²åŠ è½½
        if (WslDistributions.Contains(value.WslName))
        {
            SelectedConnection.WslName = value.WslName;
        }
    }

    SaveCommand.NotifyCanExecuteChanged();
}


