private void OnAdd()
{
    var newConnection = new DbConnectionConfig
    {
        ConnectionName = "New Connection",
        IsTested = false
    };

    Connections.Add(newConnection);

    SelectedConnection = newConnection;

    // çŠ¶æ€æ§åˆ¶
    IsDetailEnabled = true;
    CanRemove = true;
    CanTest = true;
    CanSave = false;

    TestResultMessage = "Not tested";
}

