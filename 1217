                <ui:NavigationViewItem
                    Content="Dashboard"
                    Icon="Home24"
                    TargetPageType="{x:Type pages:DashboardPage}" />
                <ui:NavigationViewItem
                    Content="Samples"
                    Icon="DataHistogram24"
                    TargetPageType="{x:Type pages:SamplesPage}" />
